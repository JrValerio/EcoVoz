{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["frontend/src/*"],
      "@/backend/*": ["backend/src/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "isolatedModules": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": [
    "frontend/src/**/*",
    "backend/src/**/*",
    "*.js",
    "eslint.config.js",
    "frontend/src/tests/**/*",
    "backend/src/tests/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
