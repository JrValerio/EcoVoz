{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["frontend/src/*"],
      "@/backend/*": ["backend/src/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "resolveJsonModule": true,
    "noEmit": true,
    "useUnknownInCatchVariables": true
  },
  "include": [
    "frontend/src/**/*",
    "backend/src/**/*",
    "*.js",
    "*.ts",
    "*.tsx",
    "*.eslint.config.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "frontend/dist",
    "backend/dist"
  ]
}
