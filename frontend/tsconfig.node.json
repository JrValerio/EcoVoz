{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.cache/tsconfig.node.tsbuildinfo", // Define local de cache para builds incrementais
    "target": "ES2022", // Suporte às features modernas do JavaScript
    "lib": ["ES2022"], // APIs disponíveis em ES2022
    "module": "ESNext", // Usa o sistema de módulos moderno
    "skipLibCheck": true, // Ignora verificações de tipo em arquivos de bibliotecas
    "forceConsistentCasingInFileNames": true, // Garante consistência de caixa nos nomes de arquivos
    /* Bundler mode */
    "moduleResolution": "Bundler", // Resolução de módulos no estilo bundler para Vite
    "allowImportingTsExtensions": true, // Permite importar arquivos TypeScript diretamente
    "isolatedModules": true, // Garante que cada arquivo seja tratado de forma independente
    "moduleDetection": "force", // Força o uso explícito de módulos
    "noEmit": true, // Não emite arquivos compilados

    /* Linting */
    "strict": true, // Ativa verificações rigorosas de tipo
    "noUnusedLocals": true, // Marca variáveis locais não usadas como erros
    "noUnusedParameters": true, // Marca parâmetros não usados como erros
    "noFallthroughCasesInSwitch": true, // Evita erros em `switch` com casos sem `break`
    "noUncheckedSideEffectImports": true // Marca imports com efeitos colaterais não checados como erros
  },
  "include": ["vite.config.ts"] // Inclui apenas arquivos de configuração relevantes
}
