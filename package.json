{
  "name": "ecovoz",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:backend": "cross-env NODE_ENV=development npm --prefix backend run dev",
    "dev:frontend": "cross-env NODE_ENV=development npm --prefix frontend run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "npm --prefix frontend run build",
    "build:backend": "npm --prefix backend run build",
    "start": "npm run start:frontend && npm run start:backend",
    "start:frontend": "npm --prefix frontend run start",
    "start:backend": "npm --prefix backend run start",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,css,md,json}\"",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:check": "eslint . --ext .ts,.tsx,.js,.jsx",
    "test": "echo 'Tests are skipped' && exit 0",
    "test:frontend": "vitest run --passWithNoTests",
    "test:backend": "vitest run --config backend/vitest.config.ts",
    "test:ui": "vitest --ui",
    "check-format": "prettier --check \"**/*.{ts,tsx,js,jsx,css,md,json}\"",
    "commit": "cz",
    "prepare": "husky install",
    "type-check": "tsc --noEmit",
    "check:all": "npm run lint:check && npm run check-format && npm run type-check",
    "clean": "rimraf backend/dist frontend/dist",
    "deploy": "docker-compose down && docker-compose up --build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ],
    "*.{css,json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@babel/preset-react": "^7.25.9",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.15.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/react-speech-recognition": "^3.9.5",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@types/testing-library__react": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitest/ui": "^2.1.5",
    "autoprefixer": "^10.4.20",
    "commitizen": "^4.3.1",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "globals": "^15.12.0",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "postcss": "^8.4.49",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.15",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "dependencies": {
    "@babel/plugin-transform-runtime": "^7.25.9",
    "@babel/runtime": "^7.26.0",
    "@reduxjs/toolkit": "^2.3.0",
    "@tailwindcss/forms": "^0.5.9",
    "@vitejs/plugin-react": "^4.3.3",
    "axios": "^1.7.7",
    "core-js": "^3.39.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "react-icons": "^5.3.0",
    "react-speech-recognition": "^3.10.0",
    "workbox-cli": "^7.3.0"
  }
}
