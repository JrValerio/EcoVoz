{
  "name": "ecovoz",
  "version": "1.0.0",
  "private": true,
  "description": "EcoVoz - Uma aplicação acessível para comunicação assistiva.",
  "author": "Equipe EcoVoz",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/JrValerio/ecovoz.git"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:backend": "cross-env NODE_ENV=development npm --prefix backend run dev",
    "dev:frontend": "cross-env NODE_ENV=development npm --prefix frontend run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "npm --prefix frontend run build",
    "build:backend": "npm --prefix backend run build",
    "start": "npm run start:frontend && npm run start:backend",
    "start:frontend": "npm --prefix frontend run start",
    "start:backend": "npm --prefix backend run start",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,css,md,json}\"",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "vitest run --passWithNoTests",
    "test:backend": "jest --config backend/jest.config.js",
    "test:coverage": "jest --coverage --config backend/jest.config.js",
    "type-check": "tsc --noEmit",
    "check:all": "npm run lint:check && npm run format && npm run type-check",
    "clean": "rimraf backend/dist frontend/dist",
    "deploy": "docker-compose down && docker-compose up --build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ],
    "*.{css,json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@babel/preset-react": "^7.25.9",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "postcss": "^8.4.49",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.15",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3",
    "vite": "^5.4.11",
    "vitest": "^2.1.5"
  },
  "dependencies": {
    "@react-oauth/google": "^0.12.1",
    "@reduxjs/toolkit": "^2.3.0",
    "@tailwindcss/forms": "^0.5.9",
    "axios": "^1.7.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "google-auth-library": "^9.15.0",
    "react-icons": "^5.3.0",
    "react-speech-recognition": "^3.10.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
