{
  "name": "ecovoz",
  "version": "1.0.0",
  "private": true,
  "description": "EcoVoz - Uma aplicação acessível para comunicação assistiva.",
  "author": "Equipe EcoVoz",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/JrValerio/ecovoz.git"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:backend": "cross-env NODE_ENV=development npm --prefix backend run dev",
    "dev:frontend": "cross-env NODE_ENV=development npm --prefix frontend run dev",
    "build": "npm --prefix frontend run build",
    "build:frontend": "npm --prefix frontend run build",
    "build:backend": "npm --prefix backend run build",
    "start:frontend": "npm --prefix frontend run start",
    "start:backend": "npm --prefix backend run start",
    "start": "npm run start:frontend && npm run start:backend",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "npm --prefix frontend run test",
    "test:backend": "npm --prefix backend run test",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,css,md,json}\"",
    "clean": "rimraf backend/dist frontend/dist",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "deploy": "git push origin main"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ],
    "*.{css,json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@babel/preset-react": "^7.25.9",
    "@chakra-ui/react": "^3.2.0",
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@emotion/react": "^11.13.5",
    "@emotion/styled": "^11.13.5",
    "@eslint/js": "^9.15.0",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/react-i18next": "^8.1.0",
    "@types/react-icons": "^3.0.0",
    "@vitejs/plugin-react": "^4.3.3",
    "@vitest/ui": "^2.1.6",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "core-js": "^3.39.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "framer-motion": "^11.11.17",
    "globals": "^15.12.0",
    "i18next": "^24.0.2",
    "identity-obj-proxy": "^3.0.0",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.10",
    "postcss": "^8.4.49",
    "prettier": "^3.4.1",
    "react-icons": "^5.3.0",
    "react-redux": "^9.1.2",
    "react-router-dom": "^7.0.1",
    "react-speech-recognition": "^3.10.0",
    "react-toastify": "^10.0.6",
    "redux": "^5.0.1",
    "regenerator-runtime": "^0.14.1",
    "rimraf": "^6.0.1",
    "styled-components": "^6.1.13",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.7.2",
    "vite": "^5.4.11",
    "vite-plugin-imagemin": "^0.6.1",
    "vitest": "^2.1.6"
  },
  "engines": {
    "node": ">=20.9.0 <21.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
