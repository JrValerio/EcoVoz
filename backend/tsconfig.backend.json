{
  "extends": "./tsconfig.base.json", // Herda opções do arquivo base
  "compilerOptions": {
    "outDir": "./dist/backend", // Saída dos arquivos compilados
    "rootDir": "./backend/src", // Diretório raiz para o backend
    "module": "commonjs", // Backend geralmente usa CommonJS
    "target": "ES2020" // Alvo para o Node.js atual
  },
  "include": ["backend/src/**/*"], // Apenas arquivos do backend
  "exclude": ["frontend", "node_modules", "dist"] // Exclui arquivos irrelevantes
}
