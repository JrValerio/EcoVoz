{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@backend/*": ["backend/src/*"],
      "@frontend/*": ["frontend/src/*"]
    },
    "experimentalDecorators": true,
    "typeRoots": ["./node_modules/@types", "./backend/src/@types"],
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": [
    "src/**/*",
    "*.js",
    "eslint.config.js",
    "jest.config.js",
    "jest.setup.ts",
    "backend/src/@types/**/*.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
