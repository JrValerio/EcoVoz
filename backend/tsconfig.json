{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ESNext",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@backend/*": ["backend/src/*"],
      "@frontend/*": ["frontend/src/*"]
    },
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": [
  "src/**/*",
  "*.js",
  "*.ts",
  "*.tsx",
  "*.eslint.config.js"
],
  "exclude": ["node_modules", "dist"]
}
