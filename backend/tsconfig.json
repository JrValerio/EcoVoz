{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext", 
    "moduleResolution": "node", 
    "target": "ES2020", 
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".", 
    "paths": {
      "@backend/*": ["src/*"] 
    },
    "outDir": "./dist",
    "rootDir": "src" 
  },
  "include": [
    "src/**/*",
    "*.js",
    "*.ts",
    "*.tsx",
    "*.eslint.config.js"
  ],
  "exclude": ["node_modules", "dist"]
}
