{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext", 
    "moduleResolution": "node", 
    "target": "ES2020", 
    "jsx": "preserve",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./", 
    "paths": {
  "@/*": ["src/*"],
  "@shared/*": ["../shared/*"]
},
    "outDir": "./dist",
    "rootDir": "./src" 
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
