{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@backend/*": ["backend/src/*"],
      "@frontend/*": ["frontend/src/*"],
      "@shared/*": ["shared/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "backend/src/**/*",
    "frontend/src/**/*",
    "shared/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
